<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    android:orientation="vertical">

    <!-- Banner Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#D6FF6D">

        <ImageView

            android:id="@+id/bicycle_image"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bicycle_image" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:text="BicycleRental"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="47dp"
            android:foregroundGravity="top"
            android:gravity="top"
            android:text="Fast Easy &amp; Eco-Friendly"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Signup/Login Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E0E0E0"
            android:text="Signup"
            android:textColor="#000000" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#000000"
            android:text="Login"
            android:textColor="#FFFFFF" />

        <!-- Social Media Login Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:text="or continue with"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/google_login"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Google login"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/google_icon" />

            <ImageView
                android:id="@+id/apple_login"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Apple login"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/apple_icon" />

            <ImageView
                android:id="@+id/facebook_login"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Facebook login"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/facebook_icon" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
