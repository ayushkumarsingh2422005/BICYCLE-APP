<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/rounder_corners"
    android:backgroundTint="#E8E8E8"
    android:layout_margin="8dp">

    <!-- Request Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name - XYZ"
        android:textColor="#000000" />

    <!-- Registration Number -->
    <TextView
        android:id="@+id/tvRegistrationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration number - 2022UGECXXX"
        android:textColor="#000000" />

    <!-- Time Slot -->
    <TextView
        android:id="@+id/tvTimeSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time slot - 12pm to 2pm"
        android:textColor="#000000" />

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:backgroundTint="#32CD32"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnDeny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deny"
            android:backgroundTint="#FF6347"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_call_24"
            android:contentDescription="Call"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="4dp"/>

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_chat_24"
            android:contentDescription="Chat"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
    </LinearLayout>

</LinearLayout>
