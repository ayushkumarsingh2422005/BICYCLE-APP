<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">


        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

        <!-- Name Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6FF6F"
            android:hint="Enter your name"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Registration Number Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Number"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_registration_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6FF6F"
            android:hint="Enter your registration number"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Time Slot Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Slot (when required)"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_time_slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6FF6F"
            android:hint="Enter preferred time slot"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888" />

        <!-- Send Request Button -->
        <Button
            android:id="@+id/btn_send_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#3A85F5"
            android:elevation="4dp"
            android:fontFamily="sans-serif-medium"
            android:padding="12dp"
            android:text="Send Request"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
