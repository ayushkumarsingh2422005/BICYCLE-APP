<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Name -->
        <EditText
            android:id="@+id/editTextModelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#F3F8A2"
            android:fontFamily="@font/alatsi"
            android:hint="Model name"
            android:padding="10dp"
            android:textColorHint="#626262" />

        <!-- Registration Number -->

        <!-- Time Slot -->
        <EditText
            android:id="@+id/editTextTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#F3F8A2"
            android:fontFamily="@font/alatsi"
            android:hint="Time slot (when available)"
            android:padding="10dp"
            android:textColorHint="#626262" />

        <!-- Location Spinner -->
        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0FFAF"
            android:layout_marginBottom="12dp"/>

        <!-- Describe Location -->
        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#F3F8A2"
            android:fontFamily="@font/alatsi"
            android:hint="Describe location"
            android:padding="10dp"
            android:textColorHint="#626262" />

        <!-- Phone Number -->
        <EditText
            android:id="@+id/editTextHourlyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#F3F8A2"
            android:fontFamily="@font/alatsi"
            android:hint="Hourly Rate"
            android:inputType="phone"
            android:padding="10dp"
            android:textColorHint="#626262" />

        <!-- Bicycle Image Upload Button -->
        <Button
            android:id="@+id/buttonUploadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textAllCaps="false"
            android:drawableStart="@drawable/baseline_cloud_upload_24"
            android:backgroundTint="#A4F804"
            android:layout_marginBottom="20dp" />

        <!-- Post Button -->

    </LinearLayout>
</ScrollView>
